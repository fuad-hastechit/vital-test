<script type="application/ld+json" id="gropulse_rich_snippets_home_page" class="gropulse-rich-snippets-schema">
  {
      "@context" : "http://schema.org",
      "@type" : "Corporation"
      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopBrand != blank -%}
          {% capture newLine %}
      {% endcapture %}
          ,"brand": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopBrand}}"
      {%- endif -%}

      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopDescription != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"description": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopDescription}}"
      {%- endif -%}

      {%- if shop.name != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"name" : "{{shop.name}}"
      {%- endif -%}

      {%- assign shopFoundersString = shop.metafields.gropulse_rich_snippets.json_ld.value.shopFounders | join: '' -%}
      {%- if shopFoundersString != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"founders": {{ shop.metafields.gropulse_rich_snippets.json_ld.value.shopFounders | json }}
      {%- endif -%}


      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopFoundingDate != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"foundingDate": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopFoundingDate}}"
      {%- endif -%}


      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopFoundingLocation != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"foundingLocation": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopFoundingLocation}}"
      {%- endif -%}



      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopKnowsAbout != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"knowsAbout": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopKnowsAbout}}"
      {%- endif -%}




      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopLegalName != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"legalName": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopLegalName}}"
      {%- endif -%}



      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.leiCode != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"leiCode": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.leiCode}}"
      {%- endif -%}


      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.logoUrl != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"logo" : "{{shop.metafields.gropulse_rich_snippets.json_ld.value.logoUrl}}"
      {%- endif -%}



      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.numberOfEmployees != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"numberOfEmployees": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.numberOfEmployees}}"
      {%- endif -%}




      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.ownershipFundingInfoUrl != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"ownershipFundingInfo": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.ownershipFundingInfoUrl}}"
      {%- endif -%}


      {%- if shop.domain != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"url" : "https://{{shop.domain}}"
      {%- endif -%}


      {%- assign socialProfilesString = shop.metafields.gropulse_rich_snippets.json_ld.value.socialProfiles | join: '' -%}
      {%- if socialProfilesString != blank -%}
          {% capture newLine %}
  {% endcapture %}
          {% assign socialProfilesArray = '' | split: '' %}
          {%- for singleLink in shop.metafields.gropulse_rich_snippets.json_ld.value.socialProfiles -%}
              {%- if singleLink != blank -%}

              {% assign addCommaSingleLink = singleLink | append : ',' | split: ',' %}

                  {% assign socialProfilesArray = socialProfilesArray | concat: addCommaSingleLink %}
              {%- endif -%}
          {%- endfor -%}

          ,"sameAs" : {{ socialProfilesArray | json }}
      {%- endif -%}


      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.shopSlogan != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"slogan": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.shopSlogan}}"
      {%- endif -%}


      {%- assign tickerSymbolString = shop.metafields.gropulse_rich_snippets.json_ld.value.tickerSymbol | join: '' -%}
      {%- if tickerSymbolString != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"tickerSymbol": {{ shop.metafields.gropulse_rich_snippets.json_ld.value.tickerSymbol | json }}
      {%- endif -%}


      {%- if shop.metafields.gropulse_rich_snippets.json_ld.value.awards != blank -%}
          {% capture newLine %}
      {% endcapture %}
      ,"awards": "{{shop.metafields.gropulse_rich_snippets.json_ld.value.awards}}"
      {%- endif -%}

      {% capture newLine %}
  {% endcapture %}

  }
</script>
